import { ComponentMeta, ComponentStory } from '@storybook/react';

import Title from '../Title';
import Button, { ButtonViewType } from './Button';

export default {
  title: 'Buttons',
  component: Button,
} as ComponentMeta<typeof Button>;

const BUTTONS = [
  ['Primary', [ButtonViewType.Primary, ButtonViewType.Success, ButtonViewType.Danger, ButtonViewType.Warning]],
  ['Secondary', [ButtonViewType.Secondary, ButtonViewType.Text]],
] as [string, ButtonViewType[]][];

const VARIANTS = [
  {
    gradient: true,
    shadow: true,
    disabled: true,
  },
  {},
  {
    shadow: true,
  },
  {
    gradient: true,
  },
  {
    gradient: true,
    shadow: true,
  },
];

// eslint-disable-next-line max-lines-per-function
export const Default: ComponentStory<typeof Button> = args => (
  <div className="prose">
    {BUTTONS.map(([title, views]) => (
      <>
        <Title level={2}>{title}</Title>
        <div className="flex flex-col gap-4">
          {views.map(view => (
            <div key={view} className="flex flex-row gap-4">
              {VARIANTS.map((variants, index) => (
                <Button key={index} {...{ ...args, view, ...variants }}>
                  Button
                </Button>
              ))}
            </div>
          ))}
        </div>
      </>
    ))}
  </div>
);

