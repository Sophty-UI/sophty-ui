{
  "name": "@sophty-ui/core",
  "version": "0.4.0",
  "description": "Sophty UI",
  "license": "MIT",
  "homepage": "https://sophty-ui.org/",
  "author": {
    "name": "Daniil Ryazanov",
    "email": "kein@tagproject.ru"
  },
  "keywords": [
    "components",
    "react",
    "sophty",
    "ui"
  ],
  "bugs": "https://github.com/Sophty-UI/sophty-ui/issues",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sophty-UI/sophty-ui.git"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "build-storybook": "build-storybook",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint \"components/**\" --ext=.tsx,.ts && eslint \"plugin/**\" --ext=.js",
    "lint:spell": "cspell -c .vscode/cspell.json --no-summary \"**/*.{js,ts,tsx,md,yml,json}\"",
    "prepare": "npm-run-all prepare:*",
    "prepare:docs": "node --experimental-specifier-resolution=node node_modules/.bin/docs-shared-config",
    "prepare:husky": "husky install",
    "prepare:vscode": "node --experimental-specifier-resolution=node node_modules/.bin/vscode-shared-config",
    "plugin": "tsc ./src/plugin/index.ts",
    "devsrv": "node --experimental-specifier-resolution=node --loader ts-node/esm node_modules/.bin/webpack serve --config docs/webpack.config.ts --mode development",
    "analyze": "npm run clean && webpack --config webpack.config.ts --mode production --analyze --progress"
  },
  "devDependencies": {
    "@sophty-ui/icons": "^0.3.1",
    "@tagproject/docs-shared-config": "^1.0.1",
    "@tagproject/vscode-shared-config": "^1.2.2",
    "@types/node": "^17.0.16",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "cspell": "^5.18.4",
    "css-loader": "^6.6.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-webpack-plugin": "^3.1.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^7.3.1",
    "prettier": "^2.5.1",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "peerDependencies": {
    "@sophty-ui/icons": "^0.3.1",
    "clsx": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
