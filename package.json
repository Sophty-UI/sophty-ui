    "husky": "^8.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "rollup": "^3.8.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.57.1",
    "typescript": "^4.9.5",
    "typescript-plugin-css-modules": "^4.1.1",
    "vite": "^4.0.3"
