{
  "name": "@sophty-ui/core",
  "version": "0.4.0",
  "description": "Sophty UI",
  "license": "MIT",
  "homepage": "https://sophty-ui.org/",
  "author": {
    "name": "Daniil Ryazanov",
    "email": "kein@tagproject.ru"
  },
  "keywords": [
    "components",
    "react",
    "sophty",
    "ui"
  ],
  "bugs": "https://github.com/Sophty-UI/sophty-ui/issues",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sophty-UI/sophty-ui.git"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "analyze": "npm run clean && webpack --config webpack.config.ts --mode production --analyze --progress",
    "build": "webpack --progress",
    "build:docs": "node --experimental-specifier-resolution=node --loader ts-node/esm node_modules/.bin/webpack --config docs/webpack.config.ts --mode production",
    "devsrv": "node --experimental-specifier-resolution=node --loader ts-node/esm node_modules/.bin/webpack serve --config docs/webpack.config.ts --mode development",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint \"components/**\" --ext=.tsx,.ts && eslint \"plugin/**\" --ext=.js",
    "lint:spell": "cspell -c .vscode/cspell.json --no-summary \"**/*.{js,ts,tsx,md,yml,json}\"",
    "plugin": "tsc ./src/plugin/index.ts",
    "prepare": "npm-run-all prepare:*",
    "prepare:docs": "docs-shared-config",
    "prepare:husky": "husky install",
    "prepare:vscode": "node --experimental-specifier-resolution=node node_modules/.bin/vscode-shared-config"
  },
  "devDependencies": {
    "@sophty-ui/icons": "^0.3.1",
    "@tagproject/docs-shared-config": "^1.1.2",
    "@tagproject/vscode-shared-config": "^2.0.5",
    "@types/node": "^18.11.11",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "cspell": "^6.17.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.2",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "typescript-plugin-css-modules": "^4.1.1"
  },
  "peerDependencies": {
    "@sophty-ui/icons": "^0.3.1",
    "clsx": "^1.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
