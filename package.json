  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sophty-UI/sophty-ui.git"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "build": "npm-run-all build:*",
    "build:ts": "rimraf dist && rollup -c rollup.config.ts --bundleConfigAsCjs --configPlugin typescript",
